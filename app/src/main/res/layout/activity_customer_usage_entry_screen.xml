<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerUsageEntryScreen"
    android:background="@drawable/appbg3">

    <Button
        android:id="@+id/customerUsageViewOrdersButton"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:backgroundTint="#593B16"
        android:onClick="viewOrders"
        android:text="@string/view_orders"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerUsageViewStoresButton"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/customerUsageWelcomeView"
        android:layout_width="384dp"
        android:layout_height="138dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/appbg2"
        android:text="Welcome \nZubair!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:autoSizeMaxTextSize="64sp"
        app:autoSizeMinTextSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customerUsageViewStoresButton"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:backgroundTint="#593B16"
        android:onClick="viewStores"
        android:text="@string/view_stores"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerUsageWelcomeView"
        app:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/button7"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:backgroundTint="#593B16"
        android:onClick="logOut"
        android:text="@string/logoutButton"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerUsageViewOrdersButton"
        app:layout_constraintVertical_bias="0.279" />
</androidx.constraintlayout.widget.ConstraintLayout>